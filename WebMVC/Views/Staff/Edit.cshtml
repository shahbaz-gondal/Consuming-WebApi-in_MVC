@model WebApi.Models.Staff

@{
    ViewData["Title"] = "Edit";
}

<h4>Update Staff's Info</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="StaffId" type="hidden" class="form-control" />
            <div class="form-group">
                <label asp-for="StaffName" class="control-label">Name</label>
                <input asp-for="StaffName" class="form-control" />
                <span asp-validation-for="StaffName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StaffGender" class="control-label">Gender</label>
                <input asp-for="StaffGender" class="form-control" />
                <span asp-validation-for="StaffGender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StaffContact" class="control-label">Contact</label>
                <input asp-for="StaffContact" class="form-control" />
                <span asp-validation-for="StaffContact" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StaffPosition" class="control-label">Position</label>
                <input asp-for="StaffPosition" class="form-control" />
                <span asp-validation-for="StaffPosition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyId" class="control-label">Company</label>
                @Html.DropDownList("CompanyId", (IEnumerable<SelectListItem>)ViewBag.Companies, ViewData["myCompany"].ToString(), new { @class ="form-control" })
            </div>
            @*<div class="form-group">
                <label asp-for="FlightId" class="control-label"></label>
                <input asp-for="FlightId" class="form-control" />
                <span asp-validation-for="FlightId" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

